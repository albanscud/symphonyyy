{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-blue-600">Inscription </h1>
    
    {{ form_start(registrationForm) }}
    <div class="flex flex-col py-3">
        <label for="inputEmail">Email :</label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.email) }}
        </div>

        <label for="inputPassword">Mot de passe : </label>
        <div class="relative block  w-1/3  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        
        <label for="inputPassword">Nom : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.lastname) }}
        </div>

        <label for="inputPassword">Prenom : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        
        {{ form_row(registrationForm.firstname) }}
        </div>
        <label for="inputPassword">Adresse : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.adress) }}
        </div>
        <label for="inputPassword">Code postal : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.zipcode) }}
        </div>
        <label for="inputPassword">Ville : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.city) }}
        </div>
        <label for="inputPassword">RGPD : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.RGPDConsent) }}
        </div>

    </div>
    

    <div class="py-5">
        <button type="submit" class="text-center bg-blue-500 rounded-md py-2 px-4 text-sm">Inscription</button>
        <button href="{{ path('app_login') }}" class="text-center bg-violet-600 rounded-md py-2 px-4 text-sm" type="submit">
        Se connecter
        </button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
