{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class=" text-center text-3xl font-bold  text-orange-400 py-6 underline">Inscription </h1>
    
    {{ form_start(registrationForm) }}
   
<div class="grid grid-cols-1 gap-5 place-items-center ">
      {#   <label class="text-xl" for="inputEmail">Email :</label>
        <div class="w-1/3 appearance-none  border border-gray-300 py-2 text-gray-900">
        {{ form_row(registrationForm.email) }}
        </div> #}

       
        <div class="w-full max-w-md">
                <label class="block text-gray-700 text-xl font-bold mb-2" for="inputEmail">Email :</label>
                <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight">
                {{ form_row(registrationForm.email) }}
                </div>
        </div>


        <div class="w-full max-w-md">
                <label class="text-xl block text-gray-700 font-bold mb-2" for="inputPassword">Mot de passe : </label>
                <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight ">
                {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                </div>
        </div>  
        <div class="w-full max-w-md">
                <label class="text-xl block text-gray-700 font-bold mb-2" for="inputLastname">Nom : </label>
                <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight">
                {{ form_row(registrationForm.lastname) }}
                </div>
        </div>

        <div class="w-full max-w-md">
                <label class="text-xl block text-gray-700 font-bold mb-2" for="inputFirstname">Prenom : </label>
                <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight">
                {{ form_row(registrationForm.firstname) }}
                </div>
        </div>

        <div class="w-full max-w-md">
                <label class="text-xl block text-gray-700 font-bold mb-2" for="inputAdress">Adresse : </label>
                <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight">
                {{ form_row(registrationForm.adress) }}
                </div>
        </div>
        <div class="w-full max-w-md">
                <label class="text-xl block text-gray-700  font-bold mb-2" for="inputZipcode">Code postal : </label>
                <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight">
                {{ form_row  (registrationForm.zipcode) }}
                </div>
        </div>
        
        <div class="w-full max-w-md">
                <label class="text-xl block text-gray-700  font-bold mb-2" for="inputCity">Ville : </label>
                <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight">
                {{ form_row (registrationForm.city) }}
                </div>
        </div>

        <div class="w-full max-w-md">
                <label class="text-xl block text-gray-700  font-bold mb-2" for="inputRgpd">Acceptez les conditions d'utilisations : </label>
                        <div class="w-full appearance-none border border-gray-300 py-2 px-3 text-gray-900 leading-tight">
                        {{ form_row(registrationForm.RGPDConsent) }}
                        </div>
                
        </div>
    
    

        <div class="py-5 w-full max-w-md">
                <button type="submit" class="text-center bg-blue-500 rounded-md py-2 px-4 ">Inscription</button>
                <button href="{{ path('app_login') }}" class="text-center bg-violet-600 rounded-md py-2 px-4 " type="submit">
                Se connecter
                </button>
            </div>
                {{ form_end(registrationForm) }}
        </div>
</div>
   
{% endblock %}
