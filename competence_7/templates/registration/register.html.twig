{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class=" text-center text-3xl font-bold  text-orange-400 py-6 underline">Inscription </h1>
    
    {{ form_start(registrationForm) }}
   
    <div class="grid grid-cols-1 gap-4 place-items-center ">
        <label class="text-xl" for="inputEmail">Email :</label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.email) }}
        </div>

        <label class="text-xl" for="inputPassword">Mot de passe : </label>
        <div class="relative block  w-1/3  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        
        <label class="text-xl" for="inputPassword">Nom : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.lastname) }}
        </div>

        <label class="text-xl" for="inputPassword">Prenom : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        
        {{ form_row(registrationForm.firstname) }}
        </div>
        <label class="text-xl" for="inputPassword">Adresse : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.adress) }}
        </div>
        <label class="text-xl" for="inputPassword">Code postal : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.zipcode) }}
        </div>
        <label class="text-xl" for="inputPassword">Ville : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.city) }}
        </div>
        <label class="text-xl" for="inputPassword">RGPD : </label>
        <div class="relative block  w-1/3 appearance-none  border border-gray-300 px-3 py-2 text-gray-900   sm:text-sm">
        {{ form_row(registrationForm.RGPDConsent) }}
        </div>

    
    

        <div class="py-5">
            <button type="submit" class="text-center bg-blue-500 rounded-md py-2 px-4 text-sm">Inscription</button>
            <button href="{{ path('app_login') }}" class="text-center bg-violet-600 rounded-md py-2 px-4 text-sm" type="submit">
            Se connecter
            </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
   
{% endblock %}
